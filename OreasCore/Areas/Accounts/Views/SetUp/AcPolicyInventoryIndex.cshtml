@{
    ViewBag.Title = "AcPolicyInventory";
}
@section Scripts {

    <script src="~/angular.js/Angular-Accounts/SetUp/acpolicyinventoryindex.0.2.js"></script>
}
<div ng-controller="AcPolicyInventoryIndexCtlr" class="container">
    <div id="AcPolicyInventoryIndexCtlr">
        <MyViewName>Accounts Policy For Inventory</MyViewName>
        @*-----------------------------------this is entry panel-----------------------------*@
        <MyButton operation="@MyButtonOperation.Add"></MyButton>
        <div ng-hide="ng_entryPanelHide">
            <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate>

                <MyAntiforgeryToken></MyAntiforgeryToken>
                @Html.Hidden("tbl_Ac_PolicyInventory.ID", "{{tbl_Ac_PolicyInventory.ID}}")

            <MyFieldSet legendtext="Entry Form">
                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Product Type</span>
                        <select id="tbl_Ac_PolicyInventory.FK_tbl_Inv_ProductType_ID" name="tbl_Ac_PolicyInventory.FK_tbl_Inv_ProductType_ID" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="x.ID as x.ProductType for x in ProductTypeList" data-ng-model="tbl_Ac_PolicyInventory.FK_tbl_Inv_ProductType_ID" ng-disabled="ng_readOnly" required>
                            <option value="">Select Product Type</option>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Inv_ProductType_ID" required="true"></MyValidationSpan>
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Inventory</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_InvName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_InvName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_InvName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_InvName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">COGS</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_COGSName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_COGSName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_COGSName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_COGSName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Expense</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ExpenseName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ExpenseName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ExpenseName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ExpenseName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">InProcess</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_InProcessName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_InProcessName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_InProcessName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_InProcessName" required="true"></MyValidationSpan>
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">WHT On Purchases</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_WHT_PurchaseName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_WHT_PurchaseName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_WHT_PurchaseName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_WHT_PurchaseName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">GST On Purchase</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_GST_PurchaseName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_GST_PurchaseName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_GST_PurchaseName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_GST_PurchaseName" required="true"></MyValidationSpan>
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">WHT On Sales</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_WHT_SalesName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_WHT_SalesName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_WHT_SalesName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_WHT_SalesName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">ST On Sales</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ST_SalesName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ST_SalesName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ST_SalesName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ST_SalesName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">FST On Sales</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_FST_SalesName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_FST_SalesName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_FST_SalesName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_FST_SalesName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Sales</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_SalesName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_SalesName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_SalesName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_SalesName" required="true"></MyValidationSpan>
                    </div>
                </div>
                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Expense Trial Batch</span>
                        <MyButtonModal fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ExpenseTRName" ng-click="OpenCOASearchModalGeneral('General', 0, 'tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ExpenseTRName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ExpenseTRName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_PolicyInventory.FK_tbl_Ac_ChartOfAccounts_ID_ExpenseTRName" required="true"></MyValidationSpan>
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                        <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                    </div>
                </div>

                <MyFieldSet legendtext="User" child="true">
                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Ac_PolicyInventory.CreatedBy}}" ng-model="tbl_Ac_PolicyInventory.CreatedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Ac_PolicyInventory.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Ac_PolicyInventory.CreatedDate" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Ac_PolicyInventory.ModifiedBy}}" ng-model="tbl_Ac_PolicyInventory.ModifiedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Ac_PolicyInventory.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Ac_PolicyInventory.ModifiedDate" disabled />
                        </div>
                    </div>
                </MyFieldSet>
            </MyFieldSet>
            </form>
        </div>

        @*-----------------------------------this is data list view-----------------------------*@
        <div mycssclass="@MyCSSClassName.Table_Div">
            <table mycssclass="@MyCSSClassName.Table_Table">
                <tr>
                    <th>
                        Product Type
                    </th>
                    <th>
                        Inventory A/c
                    </th>
                    <th>
                        COGS A/c
                    </th>
                    <th>
                        Expense A/c
                    </th>
                    <th>
                        InProcess A/c
                    </th>
                    <th>
                        WHT Purchase A/c
                    </th>
                    <th>
                        GST Purchase A/c
                    </th>
                    <th>
                        WHT Sales A/c
                    </th>
                    <th>
                        ST Sales A/c
                    </th>
                    <th>
                        FST Sales A/c
                    </th>
                    <th>
                        Sales A/c
                    </th>
                    <th>
                        Expense TR A/c
                    </th>
                    <th></th>
                </tr>
                <tr ng-repeat="itm in pageddata.Data">
                    <td>
                        {{itm.FK_tbl_Inv_ProductType_IDName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_InvName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_COGSName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_ExpenseName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_InProcessName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_WHT_PurchaseName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_GST_PurchaseName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_WHT_SalesName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_ST_SalesName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_FST_SalesName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_SalesName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_ExpenseTRName}}
                    </td>
                    <td>
                        <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                            <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                            <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                            <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="13">
                        <div mycssclass="@MyCSSClassName.Table_NavDiv">
                            <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                            <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                            <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                            <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                            <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        @*-----------------------------------this is search view-----------------------------*@
        @await Html.PartialAsync("_Filter", "AcPolicyInventoryIndexCtlr")
    </div>

    @*-----------------------------------this is Modal view-----------------------------*@
    @await Html.PartialAsync("_COASearchModalGeneral")
</div>




