<MyViewName>    
    <a href="" ng-click="DivHideShow(null,null,'CompositionCostingIndirectExpenseCtlr','CompositionCostingMasterCtlr', this);">Composition Costing</a>
    <MyViewName child="true">Indirect Expense(s)</MyViewName>
</MyViewName>

<div>
    <div>
        <div mycssclass="@MyCSSClassName.Table_DivSubPage">
            <table mycssclass="@MyCSSClassName.Table_TableSubPage">
                <tr>
                    <th>
                        Semi Finished
                    </th>
                    <th>
                        Batch Size
                    </th>
                    <th>
                        Primary Finished
                    </th>
                    <th>
                        Secondar Finished
                    </th>
                    <th>
                        Packaging Name
                    </th>
                </tr>
                <tr>
                    <td>
                        {{MasterObject.SemiProduct}} {{MasterObject.SemiProductUnit}}
                    </td>
                    <td>
                        {{MasterObject.BatchSize}} {{MasterObject.SemiProductUnit}}
                    </td>
                    <td>
                        {{MasterObject.PrimaryProduct}}
                    </td>
                    <td>
                        {{MasterObject.SecondaryProduct}}
                    </td>
                    <td>
                        {{MasterObject.PackagingName}}
                    </td>
                </tr>
                <tr>
                    <td colspan="5">
                    </td>
                </tr>
            </table>
        </div>
    </div>

    @*-----------------------------------this is entry panel-----------------------------*@
    <MyButton operation="@MyButtonOperation.Add"></MyButton>
    <div ng-hide="ng_entryPanelHide">
        <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate="">
            @Html.Hidden("tbl_Ac_CompositionCostingIndirectExpense.ID", "{{tbl_Ac_CompositionCostingIndirectExpense.ID}}")
            @Html.Hidden("tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Pro_CompositionMaster_ID", "{{tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Pro_CompositionMaster_ID}}")

            <MyFieldSet legendtext="Entry Form">
                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Indirect Expense Name</span>
                        <select id="tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Ac_CostingIndirectExpenseList_ID" name="tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Ac_CostingIndirectExpenseList_ID" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="x.ID as x.IndirectExpenseName for x in CostingIndirectExpenseList" data-ng-model="tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Ac_CostingIndirectExpenseList_ID" ng-change="OnChangeOfExpense();" ng-disabled="ng_readOnly">
                            <option value="">Select Expense</option>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Ac_CostingIndirectExpenseList_ID" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Expense Product {{tbl_Ac_CompositionCostingIndirectExpense.MeasurementUnit}}</span>
                        <MyButtonModal fieldname="tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Inv_ProductRegistrationDetail_IDName" ng-click="OpenProductSearchModalGeneral('General', null, 'tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Inv_ProductRegistrationDetail_IDName', ProductSearch_CtrlFunction_Ref_InvokeOnSelection, null, tbl_Ac_CompositionCostingIndirectExpense.ID); myform['tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Inv_ProductRegistrationDetail_IDName'].$dirty=true;" ng-disabled="ng_readOnly"></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Inv_ProductRegistrationDetail_IDName"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Quantity In {{tbl_Ac_CompositionCostingIndirectExpense.MeasurementUnit}}</span>
                        <input id="tbl_Ac_CompositionCostingIndirectExpense.Quantity" name="tbl_Ac_CompositionCostingIndirectExpense.Quantity" type="number" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" ng-model="tbl_Ac_CompositionCostingIndirectExpense.Quantity" ng-disabled="ng_readOnly" min="0" required />
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Custom Rate</span>
                        <input id="tbl_Ac_CompositionCostingIndirectExpense.CustomRate" name="tbl_Ac_CompositionCostingIndirectExpense.CustomRate" type="number" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" ng-model="tbl_Ac_CompositionCostingIndirectExpense.CustomRate" ng-disabled="ng_readOnly" min="0" required />
                        <MyValidationSpan formname="myform" fieldname="tbl_Ac_CompositionCostingIndirectExpense.CustomRate" required="true"></MyValidationSpan>
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                        <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll || (tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Inv_ProductRegistrationDetail_ID === null && tbl_Ac_CompositionCostingIndirectExpense.FK_tbl_Ac_CostingIndirectExpenseList_ID === null)" />
                    </div>
                </div>
                <MyFieldSet legendtext="User" child="true">
                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Ac_CompositionCostingIndirectExpense.CreatedBy}}" ng-model="tbl_Ac_CompositionCostingIndirectExpense.CreatedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Ac_CompositionCostingIndirectExpense.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Ac_CompositionCostingIndirectExpense.CreatedDate" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Ac_CompositionCostingIndirectExpense.ModifiedBy}}" ng-model="tbl_Ac_CompositionCostingIndirectExpense.ModifiedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Ac_CompositionCostingIndirectExpense.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Ac_CompositionCostingIndirectExpense.ModifiedDate" disabled />
                        </div>
                    </div>
                </MyFieldSet>

            </MyFieldSet>
        </form>
    </div>

    @*-----------------------------------this is data list view-----------------------------*@
    <div mycssclass="@MyCSSClassName.Table_Div">
        <table mycssclass="@MyCSSClassName.Table_Table">
            <tr>
                <th>
                    Expense Name
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Custom Rate
                </th>
                <th></th>
            </tr>
            <tr ng-repeat="itm in pageddata.Data">
                <td>
                    {{itm.FK_tbl_Ac_CostingIndirectExpenseList_IDName}}
                </td>
                <td>
                    {{itm.FK_tbl_Inv_ProductRegistrationDetail_IDName}}
                </td>
                <td>
                    {{itm.Quantity}}
                </td>
                <td>
                    {{itm.CustomRate}}
                </td>
                <td>
                    <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                        <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <div mycssclass="@MyCSSClassName.Table_NavDiv">
                        <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                        <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                        <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                        <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                        <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                    </div>
                </td>
            </tr>

        </table>
    </div>
    @*-----------------------------------this is search view-----------------------------*@
    @await Html.PartialAsync("_Filter", "CompositionCostingIndirectExpenseCtlr")
    @await Html.PartialAsync("_ReportPanelGeneral")
    <br />
    <input type="button" class="btn btn-outline-primary btn-sm" ng-init="cautionhide=true" value="Cautions" ng-click="cautionhide ? cautionhide=false: cautionhide=true;" />
    <div style="font-size:x-small;" ng-hide="cautionhide">
        <p>1. One must be selected from either Expense or Product</p>
        <p>2. When Expense is selected then Custom Rate must be entered</p>
    </div>
</div>
