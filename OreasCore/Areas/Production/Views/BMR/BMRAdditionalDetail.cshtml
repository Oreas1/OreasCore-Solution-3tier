<MyViewName>
    <a href="" ng-click="DivHideShow(null,null,'BMRAdditionalDetailCtlr','BMRAdditionalMasterCtlr', this);">BMR Additional</a>
    <MyViewName child="true"> Detail</MyViewName>
</MyViewName>
<div>
    <div>
        <div mycssclass="@MyCSSClassName.Table_DivSubPage">
            <table mycssclass="@MyCSSClassName.Table_TableSubPage">
                <tr>
                    <th>
                        Doc No
                    </th>
                    <th>
                        Doc Date
                    </th>
                    <th>
                        Batch No
                    </th>
                    <th>
                        WareHouse
                    </th>
                </tr>
                <tr>
                    <td>
                        {{MasterObject.DocNo}}
                    </td>
                    <td>
                        {{MasterObject.DocDate}}
                    </td>
                    <td>
                        {{MasterObject.FK_tbl_Pro_BatchMaterialRequisitionMaster_IDName}}
                    </td>
                    <td>
                        {{MasterObject.FK_tbl_Inv_WareHouseMaster_IDName}}
                    </td>
                </tr>
                <tr>
                    <td colspan="4">
                    </td>
                </tr>
            </table>
        </div>
    </div>

    @*-----------------------------------this is entry panel-----------------------------*@

    <MyButton operation="@MyButtonOperation.Add"></MyButton>
    <div ng-hide="ng_entryPanelHide">
        <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate="">
            @Html.Hidden("tbl_Pro_BMRAdditionalDetail.ID", "{{tbl_Pro_BMRAdditionalDetail.ID}}")
            @Html.Hidden("tbl_Pro_BMRAdditionalDetail.FK_tbl_Pro_BMRAdditionalMaster_ID", "{{tbl_Pro_BMRAdditionalDetail.FK_tbl_Pro_BMRAdditionalMaster_ID}}")

            <MyFieldSet legendtext="Entry Form">

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Type</span>
                        <select id="tbl_Pro_BMRAdditionalDetail.FK_tbl_Pro_BMRAdditionalType_ID" name="tbl_Pro_BMRAdditionalDetail.FK_tbl_Pro_BMRAdditionalType_ID" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="x.ID as x.TypeName for x in BMRAdditionalTypeList" data-ng-model="tbl_Pro_BMRAdditionalDetail.FK_tbl_Pro_BMRAdditionalType_ID" ng-disabled="ng_readOnly" required>
                            <option value="">Select Request For</option>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="tbl_Pro_BMRAdditionalDetail.FK_tbl_Pro_BMRAdditionalType_ID" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Required / Return</span>
                        <select id="tbl_Pro_BMRAdditionalDetail.RequiredTrue_ReturnFalse" name="tbl_Pro_BMRAdditionalDetail.RequiredTrue_ReturnFalse" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="o.v as o.n for o in [{ n: 'Required', v: true }, { n: 'Return', v: false }]" data-ng-model="tbl_Pro_BMRAdditionalDetail.RequiredTrue_ReturnFalse" ng-disabled="ng_readOnly || tbl_Pro_BMRAdditionalDetail.TotalDetail > 0" required>
                            <option value="">Select Required / Return</option>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="tbl_Pro_BMRAdditionalDetail.RequiredTrue_ReturnFalse" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req"> Product</span>
                        <MyButtonModal fieldname="tbl_Pro_BMRAdditionalDetail.FK_tbl_Inv_ProductRegistrationDetail_IDName" ng-click="OpenProductSearchModalGeneral('BMRAdditional', MasterObject.ID, 'tbl_Pro_BMRAdditionalDetail.FK_tbl_Inv_ProductRegistrationDetail_IDName', ProductSearch_CtrlFunction_Ref_InvokeOnSelection, null, 0); myform['tbl_Pro_BMRAdditionalDetail.FK_tbl_Inv_ProductRegistrationDetail_IDName'].$dirty=true;" ng-disabled="ng_readOnly || tbl_Pro_BMRAdditionalDetail.TotalDetail > 0" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Pro_BMRAdditionalDetail.FK_tbl_Inv_ProductRegistrationDetail_IDName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Quantity In {{tbl_Pro_BMRAdditionalDetail.MeasurementUnit}}</span>
                        <input id="tbl_Pro_BMRAdditionalDetail.Quantity" name="tbl_Pro_BMRAdditionalDetail.Quantity" type="number" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" ng-model="tbl_Pro_BMRAdditionalDetail.Quantity" ng-pattern="wholeNumberOrNot" ng-disabled="ng_readOnly || tbl_Pro_BMRAdditionalDetail.TotalDetail > 0" min="0" required />
                        <MyValidationSpan formname="myform" fieldname="tbl_Pro_BMRAdditionalDetail.Quantity" required="true"></MyValidationSpan>
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup5">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Remarks</span>
                        <input type="text" id="tbl_Pro_BMRAdditionalDetail.Remarks" name="tbl_Pro_BMRAdditionalDetail.Remarks" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="Remarks" value="tbl_Pro_BMRAdditionalDetail.Remarks" ng-model="tbl_Pro_BMRAdditionalDetail.Remarks" ng-disabled="ng_readOnly" maxlength="50" />
                        <MyValidationSpan formname="myform" fieldname="tbl_Pro_BMRAdditionalDetail.Remarks" maxlength="50"></MyValidationSpan>
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                        <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                    </div>
                </div>

                <MyFieldSet legendtext="User" child="true">
                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Pro_BMRAdditionalDetail.CreatedBy}}" ng-model="tbl_Pro_BMRAdditionalDetail.CreatedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Pro_BMRAdditionalDetail.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Pro_BMRAdditionalDetail.CreatedDate" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Pro_BMRAdditionalDetail.ModifiedBy}}" ng-model="tbl_Pro_BMRAdditionalDetail.ModifiedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Pro_BMRAdditionalDetail.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Pro_BMRAdditionalDetail.ModifiedDate" disabled />
                        </div>
                    </div>
                </MyFieldSet>
            </MyFieldSet>
        </form>
    </div>

    @*-----------------------------------this is data list view-----------------------------*@
    <div mycssclass="@MyCSSClassName.Table_Div">
        <table mycssclass="@MyCSSClassName.Table_Table">
            <tr>
                <th>
                    Requisition Type
                </th>
                <th>
                    Required / Return
                </th>
                <th>
                    Ingreditent
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Dispensed
                </th>
                <th>
                    Remarks
                </th>
                <th></th>
            </tr>
            <tr ng-repeat="itm in pageddata.Data">
                <td>
                    {{itm.FK_tbl_Pro_BMRAdditionalType_IDName}}
                </td>
                <td>
                    {{itm.RequiredTrue_ReturnFalse ? 'Required' : 'Return'}}
                </td>
                <td>
                    {{itm.FK_tbl_Inv_ProductRegistrationDetail_IDName}}
                </td>
                <td>
                    {{itm.Quantity}} {{itm.MeasurementUnit}}
                </td>
                <td>
                    {{itm.IsDispensed ? 'Yes' : 'No'}}
                </td>
                <td>
                    {{itm.Remarks}}
                </td>
                <td>
                    <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                        <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="7">
                    <div mycssclass="@MyCSSClassName.Table_NavDiv">
                        <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                        <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                        <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                        <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                        <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                    </div>
                </td>
            </tr>

        </table>
    </div>
    @*-----------------------------------this is search view-----------------------------*@
    @await Html.PartialAsync("_Filter", "BMRAdditionalDetailCtlr")
    @await Html.PartialAsync("_ReportPanelGeneral")
</div>
