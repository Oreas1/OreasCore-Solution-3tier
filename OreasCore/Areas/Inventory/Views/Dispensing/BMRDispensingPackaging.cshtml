<MyViewName>
    <a href="" ng-click="DivHideShow(null,null,'BMRDispensingPackagingCtlr','BMRDispensingDetailPackagingDetailItemsCtlr', this);">BPR Item(s)</a>
    <MyViewName child="true"> Dispensing</MyViewName>
</MyViewName>
<div>
    <div>
        <div mycssclass="@MyCSSClassName.Table_DivSubPage">
            <table mycssclass="@MyCSSClassName.Table_TableSubPage">
                <tr>
                    <th>
                        Product
                    </th>
                    <th>
                        Req Quantity
                    </th>
                    <th>
                        Remarks
                    </th>
                </tr>
                <tr>
                    <td>
                        <b>{{MasterObject.FK_tbl_Inv_ProductRegistrationDetail_IDName}}</b>
                    </td>
                    <td>
                        {{MasterObject.Quantity}} {{MasterObject.MeasurementUnit}}
                    </td>
                    <td>
                        {{MasterObject.Remarks}}
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                    </td>
                </tr>
            </table>
        </div>
    </div>
    @*-----------------------------------this is entry panel-----------------------------*@
    <MyButton operation="@MyButtonOperation.Add"></MyButton>
    <div ng-hide="ng_entryPanelHide">
        <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate="">
            @Html.Hidden("tbl_Inv_BMRDispensingPackaging.ID", "{{tbl_Inv_BMRDispensingPackaging.ID}}")
            @Html.Hidden("tbl_Inv_BMRDispensingPackaging.FK_tbl_Pro_BatchMaterialRequisitionDetail_PackagingDetail_Items_ID", "{{tbl_Inv_BMRDispensingPackaging.FK_tbl_Pro_BatchMaterialRequisitionDetail_PackagingDetail_Items_ID}}")

            <MyFieldSet legendtext="Entry Form">
                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Dispensing Date</span>
                        <input id="tbl_Inv_BMRDispensingPackaging.DispensingDate" name="tbl_Inv_BMRDispensingPackaging.DispensingDate" type="datetime-local" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{tbl_Inv_BMRDispensingPackaging.DispensingDate}}" ng-model="tbl_Inv_BMRDispensingPackaging.DispensingDate" ng-disabled="ng_readOnly" readonly="readonly" />
                        <MyValidationSpan formname="myform" fieldname="tbl_Inv_BMRDispensingPackaging.DispensingDate"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Reference No</span>
                        <MyButtonModal fieldname="tbl_Inv_BMRDispensingPackaging.ReferenceNo" ng-click="OpenReferenceSearchModalGeneral('BMRDispensingPackaging', tbl_Inv_BMRDispensingPackaging.FK_tbl_Pro_BatchMaterialRequisitionDetail_PackagingDetail_Items_ID, 'tbl_Inv_BMRDispensingPackaging.ReferenceNo', ReferenceSearch_CtrlFunction_Ref_InvokeOnSelection, tbl_Inv_BMRDispensingPackaging.DispensingDate, tbl_Inv_BMRDispensingPackaging.ID); myform['tbl_Inv_BMRDispensingPackaging.ReferenceNo'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Inv_BMRDispensingPackaging.ReferenceNo" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Quantity [Max: {{Balance}}]</span>
                        <input id="tbl_Inv_BMRDispensingPackaging.Quantity" name="tbl_Inv_BMRDispensingPackaging.Quantity" type="number" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" ng-model="tbl_Inv_BMRDispensingPackaging.Quantity" ng-pattern="wholeNumberOrNot" ng-disabled="ng_readOnly" min="0" max="{{Balance}}" required />
                        <MyValidationSpan formname="myform" fieldname="tbl_Inv_BMRDispensingPackaging.Quantity" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Remarks</span>
                        <input type="text" id="tbl_Inv_BMRDispensingPackaging.Remarks" name="tbl_Inv_BMRDispensingPackaging.Remarks" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="Remarks" value="tbl_Inv_BMRDispensingPackaging.Remarks" ng-model="tbl_Inv_BMRDispensingPackaging.Remarks" ng-disabled="ng_readOnly" />
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                        <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                    </div>
                </div>

                <MyFieldSet legendtext="User" child="true">
                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_BMRDispensingPackaging.CreatedBy}}" ng-model="tbl_Inv_BMRDispensingPackaging.CreatedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_BMRDispensingPackaging.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Inv_BMRDispensingPackaging.CreatedDate" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_BMRDispensingPackaging.ModifiedBy}}" ng-model="tbl_Inv_BMRDispensingPackaging.ModifiedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_BMRDispensingPackaging.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Inv_BMRDispensingPackaging.ModifiedDate" disabled />
                        </div>
                    </div>
                </MyFieldSet>
            </MyFieldSet>
        </form>
    </div>

    @*-----------------------------------this is data list view-----------------------------*@
    <div mycssclass="@MyCSSClassName.Table_Div">
        <table mycssclass="@MyCSSClassName.Table_Table">
            <tr>
                <th>
                    Reservation Date
                </th>
                <th>
                    Dispensing Date
                </th>
                <th>
                    Reference No
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Remarks
                </th>
                <th></th>
            </tr>
            <tr ng-repeat="itm in pageddata.Data">
                <td>
                    {{itm.ReservationDate}}
                </td>
                <td>
                    {{itm.DispensingDate}}
                </td>
                <td>
                    {{itm.ReferenceNo}}
                </td>
                <td>
                    {{itm.Quantity}} {{MasterObject.MeasurementUnit}}
                </td>
                <td>
                    {{itm.Remarks}}
                </td>
                <td>
                    <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                        <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                    </div>
                    <div mycssclass="@MyCSSClassName.Table_OptColDiv" ng-hide="itm.IsDispensed">
                        <MyButton operation="@MyButtonOperation.AddDetail" ng-click="GetRow(itm.ID,'Add')">Dispense</MyButton>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <div mycssclass="@MyCSSClassName.Table_NavDiv">
                        <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                        <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                        <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                        <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                        <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                    </div>
                </td>
            </tr>

        </table>
    </div>
    @*-----------------------------------this is search view-----------------------------*@
    @await Html.PartialAsync("_Filter", "BMRDispensingPackagingCtlr")
    @await Html.PartialAsync("_ReportPanelGeneral")
</div>
