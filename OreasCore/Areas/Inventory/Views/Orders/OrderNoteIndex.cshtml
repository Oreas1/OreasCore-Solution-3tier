@{
    ViewBag.Title = "Order Note";
}
@section Scripts {
    <script src="~/angular.js/Angular-Inventory/Orders/ordernoteindex.050724.js"></script>
}
<div ng-controller="OrderNoteMasterCtlr" class="container">

    <div id="OrderNoteMasterCtlr">
        <MyViewName>Order Note</MyViewName>
        @*-----------------------------------this is entry panel-----------------------------*@
        <MyButton operation="@MyButtonOperation.Add"></MyButton>
        <div ng-hide="ng_entryPanelHide">
            <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate>
                <MyAntiforgeryToken></MyAntiforgeryToken>
                @Html.Hidden("tbl_Inv_OrderNoteMaster.ID", "{{tbl_Inv_OrderNoteMaster.ID}}")
                <MyFieldSet legendtext="Entry Form">

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Doc No</span>
                            <input id="tbl_Inv_OrderNoteMaster.DocNo" name="tbl_Inv_OrderNoteMaster.DocNo" type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="00001" value="tbl_Inv_OrderNoteMaster.DocNo" ng-model="tbl_Inv_OrderNoteMaster.DocNo" ng-disabled="ng_readOnly" readonly />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Doc Date</span>
                            <input id="tbl_Inv_OrderNoteMaster.DocDate" name="tbl_Inv_OrderNoteMaster.DocDate" type="datetime-local" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{tbl_Inv_OrderNoteMaster.DocDate}}" ng-model="tbl_Inv_OrderNoteMaster.DocDate" ng-disabled="ng_readOnly" required />
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_OrderNoteMaster.DocDate" required="true"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Customer A/c</span>
                            <MyButtonModal fieldname="tbl_Inv_OrderNoteMaster.FK_tbl_Ac_ChartOfAccounts_IDName" ng-click="OpenCOASearchModalGeneral('OrderNote', 0, 'tbl_Inv_OrderNoteMaster.FK_tbl_Ac_ChartOfAccounts_IDName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Inv_OrderNoteMaster.FK_tbl_Ac_ChartOfAccounts_IDName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_OrderNoteMaster.FK_tbl_Ac_ChartOfAccounts_IDName" required="true"></MyValidationSpan>
                        </div>
                    </div>

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Target Date</span>
                            <input id="tbl_Inv_OrderNoteMaster.TargetDate" name="tbl_Inv_OrderNoteMaster.TargetDate" type="datetime-local" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{tbl_Inv_OrderNoteMaster.TargetDate}}" ng-model="tbl_Inv_OrderNoteMaster.TargetDate" ng-disabled="ng_readOnly" required />
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_OrderNoteMaster.TargetDate" required="true"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup6">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Remarks</span>
                            <input type="text" id="tbl_Inv_OrderNoteMaster.Remarks" name="tbl_Inv_OrderNoteMaster.Remarks" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="Remarks" value="tbl_Inv_OrderNoteMaster.Remarks" ng-model="tbl_Inv_OrderNoteMaster.Remarks" ng-disabled="ng_readOnly" maxlength="50" />
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_OrderNoteMaster.Remarks" maxlength="50"></MyValidationSpan>
                        </div>
                    </div>

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                            <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                        </div>
                    </div>

                    <MyFieldSet legendtext="User" child="true">
                        <div mycssclass="@MyCSSClassName.RowInForm">
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_OrderNoteMaster.CreatedBy}}" ng-model="tbl_Inv_OrderNoteMaster.CreatedBy" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_OrderNoteMaster.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Inv_OrderNoteMaster.CreatedDate" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_OrderNoteMaster.ModifiedBy}}" ng-model="tbl_Inv_OrderNoteMaster.ModifiedBy" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_OrderNoteMaster.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Inv_OrderNoteMaster.ModifiedDate" disabled />
                            </div>
                        </div>
                    </MyFieldSet>
                </MyFieldSet>
            </form>
        </div>
        @*-----------------------------------this is data list view-----------------------------*@
        <div mycssclass="@MyCSSClassName.Table_Div">
            <table mycssclass="@MyCSSClassName.Table_Table">
                <tr>
                    <th>
                        Doc No
                    </th>
                    <th>
                        Doc Date
                    </th>
                    <th>
                        Customer A/c
                    </th>
                    <th>
                        Remarks
                    </th>
                    <th>
                        TargetDate
                    </th>
                    <th>
                        Total Products
                    </th>
                    <th>
                        Total Open/Closed
                    </th>
                    <th></th>
                </tr>
                <tr ng-repeat="itm in pageddata.Data">
                    <td>
                        {{itm.DocNo}}
                    </td>
                    <td>
                        {{itm.DocDate}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_IDName}}
                    </td>
                    <td style="font-size:xx-small">
                        {{itm.Remarks}}
                    </td>
                    <td>
                        {{itm.TargetDate}}
                    </td>
                    <td>
                        {{itm.TotalOrder}}
                    </td>
                    <td>
                        {{itm.TotalOpen}} / {{itm.TotalClosed}}
                    </td>
                    <td>
                        <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                            <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                            <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                            <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                        </div>
                        <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                            <button ng-click="DivHideShow('OrderNoteDetailCtlr',itm,'OrderNoteMasterCtlr','OrderNoteDetailCtlr', null);" mycssclass="@MyCSSClassName.Table_OperationBtn" title="Goto Category">Detail <span class="fa fa-info-circle"></span></button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="8">
                        <div mycssclass="@MyCSSClassName.Table_NavDiv">
                            <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                            <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                            <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                            <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                            <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                        </div>
                    </td>
                </tr>
            </table>
        </div>

        @*-----------------------------------this is search view-----------------------------*@
        @await Html.PartialAsync("_Filter", "OrderNoteMasterCtlr")
        @await Html.PartialAsync("_ReportPanelGeneral")
        <br />
        <input type="button" class="btn btn-outline-primary btn-sm" ng-init="cautionhide=true" value="Cautions" ng-click="cautionhide ? cautionhide=false: cautionhide=true;" />
        <div style="font-size:x-small;" ng-hide="cautionhide">
            <p>1. Change of Customer Ac / Product Ac is not allowed when Order Note referred in Sales Note Challan</p>
            <p>2. Change of Quantity shouldnot be less then Sold Quantity</p>
            <p>3. Change of Product is not allowed when Batch is generated or Sales note exist against the order note</p>
        </div>
    </div>


    <div ng-controller="OrderNoteDetailCtlr">
        <div id="OrderNoteDetailCtlr" style="display: none;">
            @await Html.PartialAsync("OrderNoteDetail")
        </div>
        <div ng-controller="OrderNoteDetailSubDistributorCtlr">
            <div id="OrderNoteDetailSubDistributorCtlr" style="display: none;">
                @await Html.PartialAsync("OrderNoteDetailSubDistributor")
            </div>
        </div>
        <div ng-controller="OrderNoteDetailBMRDetailCtlr">
            <div id="OrderNoteDetailBMRDetailCtlr" style="display: none;">
                @await Html.PartialAsync("OrderNoteDetailBMRDetail")
            </div>
        </div>
        <div ng-controller="OrderNoteDetailSalesNoteDetailCtlr">
            <div id="OrderNoteDetailSalesNoteDetailCtlr" style="display: none;">
                @await Html.PartialAsync("OrderNoteDetailSalesNoteDetail")
            </div>
        </div>
        <div ng-controller="OrderNoteDetailSalesReturnNoteDetailCtlr">
            <div id="OrderNoteDetailSalesReturnNoteDetailCtlr" style="display: none;">
                @await Html.PartialAsync("OrderNoteDetailSalesReturnNoteDetail")
            </div>
        </div>
    </div>

    @*-----------------------------------this is Modal view-----------------------------*@
    @await Html.PartialAsync("_COASearchModalGeneral")
    @await Html.PartialAsync("_ProductSearchModalGeneral")
    @await Html.PartialAsync("_SDSearchModalGeneral")

</div>




