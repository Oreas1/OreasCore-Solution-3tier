@{
    ViewBag.Title = "Sales Note";
}
@section Scripts {
    <script src="~/angular.js/Angular-Inventory/Challan/salesnoteindex.050724.js"></script>
}
<div ng-controller="SalesNoteMasterCtlr" class="container">

    <div id="SalesNoteMasterCtlr">
        <MyViewName>Sales Note</MyViewName>
        @*-----------------------------------this is entry panel-----------------------------*@
        <MyButton operation="@MyButtonOperation.Add"></MyButton>
        <div ng-hide="ng_entryPanelHide">
            <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate>
                <MyAntiforgeryToken></MyAntiforgeryToken>
                @Html.Hidden("tbl_Inv_SalesNoteMaster.ID", "{{tbl_Inv_SalesNoteMaster.ID}}")
                <MyFieldSet legendtext="Entry Form">

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Doc No</span>
                            <input id="tbl_Inv_SalesNoteMaster.DocNo" name="tbl_Inv_SalesNoteMaster.DocNo" type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="00001" value="tbl_Inv_SalesNoteMaster.DocNo" ng-model="tbl_Inv_SalesNoteMaster.DocNo" ng-disabled="ng_readOnly" readonly />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Doc Date</span>
                            <input id="tbl_Inv_SalesNoteMaster.DocDate" name="tbl_Inv_SalesNoteMaster.DocDate" type="datetime-local" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{tbl_Inv_SalesNoteMaster.DocDate}}" ng-model="tbl_Inv_SalesNoteMaster.DocDate" ng-disabled="ng_readOnly || tbl_Inv_SalesNoteMaster.TotalDetail > 0" required />
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_SalesNoteMaster.DocDate" required="true"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">WareHouse</span>
                            <MyButtonModal fieldname="tbl_Inv_SalesNoteMaster.FK_tbl_Inv_WareHouseMaster_IDName" ng-click="OpenWHMSearchModalGeneral('ByUser', 0, 'tbl_Inv_SalesNoteMaster.FK_tbl_Inv_WareHouseMaster_IDName', WHMSearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Inv_SalesNoteMaster.FK_tbl_Inv_WareHouseMaster_IDName'].$dirty=true;" ng-disabled="ng_readOnly || tbl_Inv_SalesNoteMaster.TotalDetail > 0" required></MyButtonModal>
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_SalesNoteMaster.FK_tbl_Inv_WareHouseMaster_IDName" required="true"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Supplier A/c</span>
                            <MyButtonModal fieldname="tbl_Inv_SalesNoteMaster.FK_tbl_Ac_ChartOfAccounts_IDName" ng-click="OpenCOASearchModalGeneral('SalesNote', 0, 'tbl_Inv_SalesNoteMaster.FK_tbl_Ac_ChartOfAccounts_IDName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Inv_SalesNoteMaster.FK_tbl_Ac_ChartOfAccounts_IDName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_SalesNoteMaster.FK_tbl_Ac_ChartOfAccounts_IDName" required="true"></MyValidationSpan>
                        </div>
                    </div>

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Sub Distributor</span>
                            <MyButtonModal fieldname="tbl_Inv_SalesNoteMaster.FK_tbl_Ac_CustomerSubDistributorList_IDName" ng-click="OpenSDSearchModalGeneral('SaleNote', tbl_Inv_SalesNoteMaster.FK_tbl_Ac_ChartOfAccounts_ID, 'tbl_Inv_SalesNoteMaster.FK_tbl_Ac_CustomerSubDistributorList_IDName', SDSearch_CtrlFunction_Ref_InvokeOnSelection); myform['tbl_Inv_SalesNoteMaster.FK_tbl_Ac_CustomerSubDistributorList_IDName'].$dirty=true;" ng-disabled="ng_readOnly"></MyButtonModal>
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_SalesNoteMaster.FK_tbl_Ac_CustomerSubDistributorList_IDName"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Transporter A/c</span>
                            <MyButtonModal fieldname="tbl_Inv_SalesNoteMaster.FK_tbl_Ac_ChartOfAccounts_ID_TransporterName" ng-click="OpenCOASearchModalGeneral('Transporter', 0, 'tbl_Inv_SalesNoteMaster.FK_tbl_Ac_ChartOfAccounts_ID_TransporterName', COASearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_Inv_SalesNoteMaster.FK_tbl_Ac_ChartOfAccounts_ID_TransporterName'].$dirty=true;" ng-disabled="ng_readOnly"></MyButtonModal>
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_SalesNoteMaster.FK_tbl_Ac_ChartOfAccounts_ID_TransporterName"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Transporter Bilty #</span>
                            <input type="text" id="tbl_Inv_SalesNoteMaster.TransporterBiltyNo" name="tbl_Inv_SalesNoteMaster.TransporterBiltyNo" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="TransporterBiltyNo" value="tbl_Inv_SalesNoteMaster.TransporterBiltyNo" ng-model="tbl_Inv_SalesNoteMaster.TransporterBiltyNo" ng-disabled="ng_readOnly" maxlength="50" />
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_SalesNoteMaster.TransporterBiltyNo" maxlength="50"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Remarks</span>
                            <input type="text" id="tbl_Inv_SalesNoteMaster.Remarks" name="tbl_Inv_SalesNoteMaster.Remarks" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="Remarks" value="tbl_Inv_SalesNoteMaster.Remarks" ng-model="tbl_Inv_SalesNoteMaster.Remarks" ng-disabled="ng_readOnly" maxlength="50" />
                            <MyValidationSpan formname="myform" fieldname="tbl_Inv_SalesNoteMaster.Remarks" maxlength="50"></MyValidationSpan>
                        </div>
                    </div>

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                            <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                        </div>
                    </div>

                    <MyFieldSet legendtext="User" child="true">
                        <div mycssclass="@MyCSSClassName.RowInForm">
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_SalesNoteMaster.CreatedBy}}" ng-model="tbl_Inv_SalesNoteMaster.CreatedBy" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_SalesNoteMaster.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Inv_SalesNoteMaster.CreatedDate" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_SalesNoteMaster.ModifiedBy}}" ng-model="tbl_Inv_SalesNoteMaster.ModifiedBy" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_SalesNoteMaster.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Inv_SalesNoteMaster.ModifiedDate" disabled />
                            </div>
                        </div>
                    </MyFieldSet>
                </MyFieldSet>
            </form>
        </div>
        @*-----------------------------------this is data list view-----------------------------*@
        <div mycssclass="@MyCSSClassName.Table_Div">
            <table mycssclass="@MyCSSClassName.Table_Table">
                <tr>
                    <th>
                        Doc No
                    </th>
                    <th>
                        Doc Date
                    </th>
                    <th>
                        Ware House
                    </th>
                    <th>
                        Customer A/c
                    </th>
                    <th>
                        Remarks
                    </th>
                    <th>
                        Transporter
                    </th>
                    <th></th>
                </tr>
                <tr ng-repeat="itm in pageddata.Data">
                    <td>
                        {{itm.DocNo}}
                    </td>
                    <td>
                        {{itm.DocDate}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Inv_WareHouseMaster_IDName}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_IDName}}
                        <br />
                        {{itm.FK_tbl_Ac_CustomerSubDistributorList_IDName}}
                    </td>
                    <td style="font-size:xx-small">
                        {{itm.Remarks}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Ac_ChartOfAccounts_ID_TransporterName}}
                        <br />
                        Bilty #: {{itm.TransporterBiltyNo}}
                    </td>
                    <td>
                        <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                            <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                            <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                            <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                        </div>
                        <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                            <button ng-click="DivHideShow('SalesNoteDetailCtlr',itm,'SalesNoteMasterCtlr','SalesNoteDetailCtlr', null);" mycssclass="@MyCSSClassName.Table_OperationBtn" title="Goto Category">Detail <span class="fa fa-info-circle"></span></button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="7">
                        <div mycssclass="@MyCSSClassName.Table_NavDiv">
                            <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                            <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                            <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                            <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                            <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                        </div>
                    </td>
                </tr>
            </table>
        </div>

        @*-----------------------------------this is search view-----------------------------*@
        @await Html.PartialAsync("_Filter", "SalesNoteMasterCtlr")
        @await Html.PartialAsync("_ReportPanelGeneral")
        <br />
        <input type="button" class="btn btn-outline-primary btn-sm" ng-init="cautionhide=true" value="Cautions" ng-click="cautionhide ? cautionhide=false: cautionhide=true;" />
        <div style="font-size:x-small;" ng-hide="cautionhide">
            <p>1. Change of Warehouse or Date is not Allowed when detail has items</p>
            <p>2. Change in Qty is not Allowed when Challan has been posted in Accounts</p>
        </div>
    </div>


    <div ng-controller="SalesNoteDetailCtlr">
        <div id="SalesNoteDetailCtlr" style="display: none;">
            @await Html.PartialAsync("SalesNoteDetail")
        </div>
        <div ng-controller="SalesNoteDetailReturnCtlr">
            <div id="SalesNoteDetailReturnCtlr" style="display: none;">
                @await Html.PartialAsync("SalesNoteDetailReturn")
            </div>
        </div>
    </div>

    @*-----------------------------------this is Modal view-----------------------------*@
    @await Html.PartialAsync("_COASearchModalGeneral")
    @await Html.PartialAsync("_ProductSearchModalGeneral")
    @await Html.PartialAsync("_ReferenceSearchModalGeneral")
    @await Html.PartialAsync("_WHMSearchModalGeneral")
    @await Html.PartialAsync("_SDSearchModalGeneral")
</div>




