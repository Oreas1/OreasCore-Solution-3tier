    @*-----------------------------------this is entry panel-----------------------------*@

    <MyButton operation="@MyButtonOperation.Add"></MyButton>
    <div ng-hide="ng_entryPanelHide">
        <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate="">
            @Html.Hidden("tbl_Inv_PurchaseNoteDetail.ID", "{{tbl_Inv_PurchaseNoteDetail.ID}}")
            @Html.Hidden("tbl_Inv_PurchaseNoteDetail.FK_tbl_Inv_PurchaseNoteMaster_ID", "{{tbl_Inv_PurchaseNoteDetail.FK_tbl_Inv_PurchaseNoteMaster_ID}}")

            <MyFieldSet legendtext="Entry Form">

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Product In {{tbl_Inv_PurchaseNoteDetail.MeasurementUnit}}</span>
                        <MyButtonModal fieldname="tbl_Inv_PurchaseNoteDetail.FK_tbl_Inv_ProductRegistrationDetail_IDName" ng-click="OpenProductSearchModalGeneral('PurchaseNote', tbl_Inv_PurchaseNoteDetail.FK_tbl_Inv_PurchaseNoteMaster_ID, 'tbl_Inv_PurchaseNoteDetail.FK_tbl_Inv_ProductRegistrationDetail_IDName', ProductSearch_CtrlFunction_Ref_InvokeOnSelection, null, tbl_Inv_PurchaseNoteDetail.ID); myform['tbl_Inv_PurchaseNoteDetail.FK_tbl_Inv_ProductRegistrationDetail_IDName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Inv_PurchaseNoteDetail.FK_tbl_Inv_ProductRegistrationDetail_IDName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">PO</span>
                        <MyButtonModal fieldname="tbl_Inv_PurchaseNoteDetail.FK_tbl_Inv_PurchaseOrderDetail_IDName" ng-click="OpenPOSearchModalGeneral();myform['tbl_Inv_PurchaseNoteDetail.FK_tbl_Inv_PurchaseOrderDetail_IDName'].$dirty=true;" ng-disabled="ng_readOnly"></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_Inv_PurchaseNoteDetail.FK_tbl_Inv_PurchaseOrderDetail_IDName"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Quantity</span>
                        <input id="tbl_Inv_PurchaseNoteDetail.Quantity" name="tbl_Inv_PurchaseNoteDetail.Quantity" type="number" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" ng-model="tbl_Inv_PurchaseNoteDetail.Quantity" ng-pattern="wholeNumberOrNot" ng-disabled="ng_readOnly" required />
                        <MyValidationSpan formname="myform" fieldname="tbl_Inv_PurchaseNoteDetail.Quantity" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Containers / Packs</span>
                        <input type="text" id="tbl_Inv_PurchaseNoteDetail.NoOfContainers" name="tbl_Inv_PurchaseNoteDetail.NoOfContainers" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="Containers/Packs" value="tbl_Inv_PurchaseNoteDetail.NoOfContainers" ng-model="tbl_Inv_PurchaseNoteDetail.NoOfContainers" ng-disabled="ng_readOnly" maxlength="10" />
                        <MyValidationSpan formname="myform" fieldname="tbl_Inv_PurchaseNoteDetail.NoOfContainers" maxlength="10"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Reference#</span>
                        <input id="tbl_Inv_PurchaseNoteDetail.ReferenceNo" name="tbl_Inv_PurchaseNoteDetail.ReferenceNo" type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="Auto" value="tbl_Inv_PurchaseNoteDetail.ReferenceNo" ng-model="tbl_Inv_PurchaseNoteDetail.ReferenceNo" ng-disabled="ng_readOnly" readonly />
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">MfgBatchNo</span>
                        <input type="text" id="tbl_Inv_PurchaseNoteDetail.MfgBatchNo" name="tbl_Inv_PurchaseNoteDetail.MfgBatchNo" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="Mfg Batch #" value="tbl_Inv_PurchaseNoteDetail.MfgBatchNo" ng-model="tbl_Inv_PurchaseNoteDetail.MfgBatchNo" ng-disabled="ng_readOnly" maxlength="20" />
                        <MyValidationSpan formname="myform" fieldname="tbl_Inv_PurchaseNoteDetail.MfgBatchNo" maxlength="20"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Mfg Date</span>
                        <input id="tbl_Inv_PurchaseNoteDetail.MfgDate" name="tbl_Inv_PurchaseNoteDetail.MfgDate" type="date" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{tbl_Inv_PurchaseNoteDetail.MfgDate}}" ng-model="tbl_Inv_PurchaseNoteDetail.MfgDate" ng-disabled="ng_readOnly" />
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Expiry Date</span>
                        <input id="tbl_Inv_PurchaseNoteDetail.ExpiryDate" name="tbl_Inv_PurchaseNoteDetail.ExpiryDate" type="date" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{tbl_Inv_PurchaseNoteDetail.ExpiryDate}}" ng-model="tbl_Inv_PurchaseNoteDetail.ExpiryDate" ng-disabled="ng_readOnly" />
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup6">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Remarks</span>
                        <input type="text" id="tbl_Inv_PurchaseNoteDetail.Remarks" name="tbl_Inv_PurchaseNoteDetail.Remarks" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="Remarks" value="tbl_Inv_PurchaseNoteDetail.Remarks" ng-model="tbl_Inv_PurchaseNoteDetail.Remarks" ng-disabled="ng_readOnly" maxlength="50" />
                        <MyValidationSpan formname="myform" fieldname="tbl_Inv_PurchaseNoteDetail.Remarks" maxlength="50"></MyValidationSpan>
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                        <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                    </div>
                </div>

                <MyFieldSet legendtext="User" child="true">
                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_PurchaseNoteDetail.CreatedBy}}" ng-model="tbl_Inv_PurchaseNoteDetail.CreatedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_PurchaseNoteDetail.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Inv_PurchaseNoteDetail.CreatedDate" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_PurchaseNoteDetail.ModifiedBy}}" ng-model="tbl_Inv_PurchaseNoteDetail.ModifiedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Inv_PurchaseNoteDetail.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Inv_PurchaseNoteDetail.ModifiedDate" disabled />
                        </div>
                    </div>
                </MyFieldSet>
            </MyFieldSet>
        </form>
    </div>

    @*-----------------------------------this is data list view-----------------------------*@
    <div mycssclass="@MyCSSClassName.Table_Div">
        <table mycssclass="@MyCSSClassName.Table_Table">
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    PO
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Mfg Batch No
                </th>
                <th>
                    Expiry Date
                </th>
                <th>
                    Remarks
                </th>
                <th>
                    Reference No
                </th>
                <th>
                    QC
                </th>
                <th>
                    Sample Qty
                </th>
                <th></th>
            </tr>
            <tr ng-repeat="itm in pageddata.Data">
                <td>
                    {{itm.FK_tbl_Inv_ProductRegistrationDetail_IDName}}
                </td>
                <td>
                    {{itm.FK_tbl_Inv_PurchaseOrderDetail_IDName}}
                </td>
                <td>
                    {{itm.Quantity}} {{itm.MeasurementUnit}}
                </td>
                <td>
                    {{itm.MfgBatchNo}}
                </td>
                <td>
                    {{itm.ExpiryDate}}
                </td>
                <td>
                    {{itm.Remarks}}
                </td>
                <td>
                    {{itm.ReferenceNo}}
                </td>
                <td style="background-color:{{itm.FK_tbl_Qc_ActionType_ID === 1 ? 'lightsteelblue':itm.FK_tbl_Qc_ActionType_ID === 2 ? 'lightgreen' : 'lightcoral'}}">
                    {{itm.FK_tbl_Qc_ActionType_IDName}}
                </td>
                <td>
                    {{itm.QuantitySample}} {{itm.MeasurementUnit}}
                </td>
                <td>
                    <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                        <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                    </div>
                    <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                        <button ng-click="itm['MasterObject']=MasterObject; DivHideShow('PurchaseNoteDetailOfDetailCtlr',itm,'PurchaseNoteDetailCtlr','PurchaseNoteDetailOfDetailCtlr', null);" mycssclass="@MyCSSClassName.Table_OperationBtn" title="Goto Detail">Detail</button>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="10">
                    <div mycssclass="@MyCSSClassName.Table_NavDiv">
                        <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                        <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                        <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                        <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                        <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                    </div>
                </td>
            </tr>

        </table>
    </div>
    @*-----------------------------------this is search view-----------------------------*@
    @await Html.PartialAsync("_Filter", "PurchaseNoteDetailCtlr")
    @await Html.PartialAsync("_ReportPanelGeneral")
    @*-----------------------------------PO Search Modal-----------------------------*@
    <div class="modal fade" id="POSearchModalGeneral" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Search then Select PO</h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form novalidate>
                        <div mycssclass="@MyCSSClassName.RowInForm">
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup6">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Filter by</span>
                                <select id="POFilterBy" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select"
                                        ng-options="o.v as o.n for o in [{ n: 'PO No', v: 'byPONo' }, { n: 'Quantity', v: 'byQuantity' }]"
                                        ng-model="POFilterBy" ng-disabled="ng_readOnly">
                                </select>
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup6">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Filter Value</span>
                                <input id="POFilterValue" type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="Type to search" ng-model="POFilterValue" />
                            </div>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm">
                            <div class="justify-content-between">
                                <span class="btn btn-danger" ng-click="General_POSelectedAc({'ID': 0});" data-bs-dismiss="modal"><span class="fa fa-cancel"></span> De-Select</span>
                                <input type="submit" value="Search" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn_Modal" ng-click="General_POSearch();" />
                            </div>
                        </div>
                    </form>

                    <div ng-repeat="item in POSearchResult" style="overflow:auto">
                        <MyButton operation="@MyButtonOperation.ModalItemSelection" ng-click="General_POSelectedAc(item);" data-bs-dismiss="modal">[{{item.FK_tbl_Inv_ProductRegistrationDetail_IDName}}] [Bal #:{{item.Bal}}{{item.MeasurementUnit}}] [PO#: {{item.PONo}}] [Qty: {{item.Quantity}}] [PODate:{{item.PODate}}] </MyButton>
                    </div>

                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>
