@{
    ViewBag.Title = "Trial Request";
}
@section Scripts {
    <script src="~/angular.js/PD/Request/requestpdindex.0.1.js"></script>
}
<div ng-controller="RequestMasterCtlr" class="container">

    <div id="RequestMasterCtlr">
        <MyViewName>Trial Request</MyViewName>
        @*-----------------------------------this is entry panel-----------------------------*@
        <MyButton operation="@MyButtonOperation.Add"></MyButton>
        <div ng-hide="ng_entryPanelHide">
            <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate>
                <MyAntiforgeryToken></MyAntiforgeryToken>
                @Html.Hidden("tbl_PD_RequestMaster.ID", "{{tbl_PD_RequestMaster.ID}}")
                <MyFieldSet legendtext="Entry Form">

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Doc No</span>
                            <input id="tbl_PD_RequestMaster.DocNo" name="tbl_PD_RequestMaster.DocNo" type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="00001" value="tbl_PD_RequestMaster.DocNo" ng-model="tbl_PD_RequestMaster.DocNo" ng-disabled="ng_readOnly" readonly />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Doc Date</span>
                            <input id="tbl_PD_RequestMaster.DocDate" name="tbl_PD_RequestMaster.DocDate" type="date" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{tbl_PD_RequestMaster.DocDate}}" ng-model="tbl_PD_RequestMaster.DocDate" ng-disabled="ng_readOnly" required />
                            <MyValidationSpan formname="myform" fieldname="tbl_PD_RequestMaster.DocDate" required="true"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Semi Finish Product {{tbl_PD_RequestMaster.MeasurementUnit}}</span>
                            <MyButtonModal fieldname="tbl_PD_RequestMaster.FK_tbl_Inv_ProductRegistrationDetail_IDName" ng-click="OpenProductSearchModalGeneral('TrialRequestBySemiFinished', tbl_PD_RequestMaster.ID, 'tbl_PD_RequestMaster.FK_tbl_Inv_ProductRegistrationDetail_IDName', ProductSearch_CtrlFunction_Ref_InvokeOnSelection, null, 0); myform['tbl_PD_RequestMaster.FK_tbl_Inv_ProductRegistrationDetail_IDName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                            <MyValidationSpan formname="myform" fieldname="tbl_PD_RequestMaster.FK_tbl_Inv_ProductRegistrationDetail_IDName" required="true"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Primary Finish Unit</span>
                            <MyButtonModal fieldname="tbl_PD_RequestMaster.FK_tbl_Inv_ProductRegistrationDetail_ID_PrimaryName" ng-click="OpenProductSearchModalGeneral('TrialRequestBySemiFinishedChild', tbl_PD_RequestMaster.FK_tbl_Inv_ProductRegistrationDetail_ID, 'tbl_PD_RequestMaster.FK_tbl_Inv_ProductRegistrationDetail_ID_PrimaryName', ProductSearch_CtrlFunction_Ref_InvokeOnSelection, null, 0); myform['tbl_PD_RequestMaster.FK_tbl_Inv_ProductRegistrationDetail_ID_PrimaryName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                            <MyValidationSpan formname="myform" fieldname="tbl_PD_RequestMaster.FK_tbl_Inv_ProductRegistrationDetail_ID_PrimaryName" required="true"></MyValidationSpan>
                        </div>
                    </div>

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">ShelfLife In Months</span>
                            <input id="tbl_PD_RequestMaster.SampleProductExpiryMonths" name="tbl_PD_RequestMaster.SampleProductExpiryMonths" type="number" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" ng-model="tbl_PD_RequestMaster.SampleProductExpiryMonths" ng-pattern="wholeNumberOrNot" ng-disabled="ng_readOnly" min="1" step="1" required />
                            <MyValidationSpan formname="myform" fieldname="tbl_PD_RequestMaster.SampleProductExpiryMonths" required="true"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup2">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Sample MRP</span>
                            <input id="tbl_PD_RequestMaster.SampleProductMRP" name="tbl_PD_RequestMaster.SampleProductMRP" type="number" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" ng-model="tbl_PD_RequestMaster.SampleProductMRP" ng-pattern="wholeNumberOrNot" ng-disabled="ng_readOnly" min="0" required />
                            <MyValidationSpan formname="myform" fieldname="tbl_PD_RequestMaster.SampleProductMRP" required="true"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Remarks</span>
                            <input type="text" id="tbl_PD_RequestMaster.Remarks" name="tbl_PD_RequestMaster.Remarks" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="..." value="tbl_PD_RequestMaster.Remarks" ng-model="tbl_PD_RequestMaster.Remarks" ng-disabled="ng_readOnly" maxlength="50" />
                            <MyValidationSpan formname="myform" fieldname="tbl_PD_RequestMaster.Remarks" maxlength="50"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label"><input type="file" id="SampleProductPhoto" name="SampleProductPhoto" onchange="angular.element(this).scope().LoadFileData(this.files);" accept="image/*" class="btn btn-block" ng-disabled="ng_readOnly" /></span>
                            <img style="border:ridge;" data-ng-src="data:image/jpeg;base64,{{tbl_PD_RequestMaster.SampleProductPhoto.length>0?tbl_PD_RequestMaster.SampleProductPhoto:''}}" width="100" height="100" />
                        </div>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup12">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">{{ImageUploadingProgress}}</span>
                        </div>

                    </div>

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                            <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                        </div>
                    </div>

                    <MyFieldSet legendtext="User" child="true">
                        <div mycssclass="@MyCSSClassName.RowInForm">
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_PD_RequestMaster.CreatedBy}}" ng-model="tbl_PD_RequestMaster.CreatedBy" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_PD_RequestMaster.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_PD_RequestMaster.CreatedDate" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_PD_RequestMaster.ModifiedBy}}" ng-model="tbl_PD_RequestMaster.ModifiedBy" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_PD_RequestMaster.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_PD_RequestMaster.ModifiedDate" disabled />
                            </div>
                        </div>
                    </MyFieldSet>
                </MyFieldSet>
            </form>
        </div>
        @*-----------------------------------this is data list view-----------------------------*@
        <div mycssclass="@MyCSSClassName.Table_Div">
            <table mycssclass="@MyCSSClassName.Table_Table">
                <tr>
                    <th>
                        Doc No
                    </th>
                    <th>
                        Doc Date
                    </th>
                    <th>
                        Semi Finish
                    </th>
                    <th>
                        Primary Unit
                    </th>
                    <th>
                        Shelf Life
                    </th>
                    <th>
                        MRP
                    </th>
                    <th>
                        Remarks
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Dispensed
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
                <tr ng-repeat="itm in pageddata.Data">
                    <td>
                        {{itm.DocNo}}
                    </td>
                    <td>
                        {{itm.DocDate}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Inv_ProductRegistrationDetail_IDName}} {{itm.MeasurementUnit}}
                    </td>
                    <td>
                        {{itm.FK_tbl_Inv_ProductRegistrationDetail_ID_PrimaryName}}
                    </td>
                    <td>
                        {{itm.SampleProductExpiryMonths}} Month(s)
                    </td>
                    <td>
                        {{itm.SampleProductMRP}}
                    </td>
                    <td>
                        {{itm.Remarks}}
                    </td>
                    <td>
                        {{itm.SampleProductPhoto}}
                    </td>
                    <td>
                        {{itm.IsDispensedAll === true ? 'Yes' : 'No'}}
                    </td>
                    <td>
                        {{itm.FinalStatus===true ? 'Sucessfull' : itm.FinalStatus===false ? 'Failed' : 'Pending'}}
                    </td>
                    <td>
                        <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                            <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                            <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                            <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                        </div>
                        <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                            <button ng-click="DivHideShow('RequestDetailTRCtlr',itm,'RequestMasterCtlr','RequestDetailTRCtlr', null);" mycssclass="@MyCSSClassName.Table_OperationBtn" title="Goto Trial BMR">Trial BMR <span class="fa fa-leaf"></span></button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="11">
                        <div mycssclass="@MyCSSClassName.Table_NavDiv">
                            <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                            <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                            <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                            <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                            <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                        </div>
                    </td>
                </tr>
            </table>
        </div>

        @*-----------------------------------this is search view-----------------------------*@
        @await Html.PartialAsync("_Filter", "RequestMasterCtlr")
        <br />
        <input type="button" class="btn btn-outline-primary btn-sm" ng-init="cautionhide=true" value="Cautions" ng-click="cautionhide ? cautionhide=false: cautionhide=true;" />
        <div style="font-size:x-small;" ng-hide="cautionhide">
            <p>1. After result of Trail no changes is allowed</p>
        </div>
    </div>


    <div ng-controller="RequestDetailTRCtlr">
        <div id="RequestDetailTRCtlr" style="display: none;">
            @await Html.PartialAsync("RequestDetailTR")
        </div>

        <div ng-controller="RequestDetailTRProcedureCtlr">
            <div id="RequestDetailTRProcedureCtlr" style="display: none;">
                @await Html.PartialAsync("RequestDetailTRProcedure")
            </div>
        </div>
        <div ng-controller="RequestDetailTRCFPCtlr">
            <div id="RequestDetailTRCFPCtlr" style="display: none;">
                @await Html.PartialAsync("RequestDetailTRCFP")
            </div>
            <div ng-controller="RequestDetailTRCFPItemCtlr">
                <div id="RequestDetailTRCFPItemCtlr" style="display: none;">
                    @await Html.PartialAsync("RequestDetailTRCFPItem")
                </div>
            </div>
        </div>
    </div>

    @*-----------------------------------this is Modal view-----------------------------*@
    @await Html.PartialAsync("_ProductSearchModalGeneral")
    @await Html.PartialAsync("_WHMSearchModalGeneral")
</div>




