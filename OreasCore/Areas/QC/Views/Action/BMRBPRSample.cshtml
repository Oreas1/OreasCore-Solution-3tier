                                    </select>
                                    <MyValidationSpan formname="myform" fieldname="tbl_Qc_SampleProcessBMR.FK_tbl_Qc_ActionType_ID" required="true"></MyValidationSpan>
                                </div>
                            </div>

                            <div mycssclass="@MyCSSClassName.RowInForm">
                                <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
