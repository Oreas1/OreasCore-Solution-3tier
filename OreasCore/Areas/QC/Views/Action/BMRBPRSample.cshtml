                            <div mycssclass="@MyCSSClassName.RowInForm">
                                <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                    <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Procedure</span>
                                    <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBMR.ProcedureName}}" disabled />
                                </div>
                                <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                    <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Sample Description</span>
                                    <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBMR.ProductName}}" disabled />
