                                    <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Sample Date</span>
                                    <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBMR.SampleDate}}" disabled />
                                </div>
                                <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                    <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Sample Qty In {{tbl_Qc_SampleProcessBMR.MeasurementUnit}}</span>
                                    <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBMR.SampleQty}}" disabled />
                                </div>
                            </div>

                            <div mycssclass="@MyCSSClassName.RowInForm">
                                <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                    <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Action</span>
                                    <select id="tbl_Qc_SampleProcessBMR.FK_tbl_Qc_ActionType_ID" name="tbl_Qc_SampleProcessBMR.FK_tbl_Qc_ActionType_ID" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="x.ID as x.ActionName for x in ActionList" data-ng-model="tbl_Qc_SampleProcessBMR.FK_tbl_Qc_ActionType_ID" ng-disabled="ng_readOnly" required>
