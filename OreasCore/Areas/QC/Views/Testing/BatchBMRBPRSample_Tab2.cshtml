@*-----------------------------------this is entry panel-----------------------------*@
<MyButton operation="@MyButtonOperation.CancelOfAdd"></MyButton>
<div ng-hide="ng_entryPanelHide">
    <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate="">
        @Html.Hidden("tbl_Qc_SampleProcessBPR.ID", "{{tbl_Qc_SampleProcessBPR.ID}}")
        @Html.Hidden("tbl_Qc_SampleProcessBPR.FK_tbl_Pro_BatchMaterialRequisitionDetail_PackagingMaster_ProcessBPR_ID", "{{tbl_Qc_SampleProcessBPR.FK_tbl_Pro_BatchMaterialRequisitionDetail_PackagingMaster_ProcessBPR_ID}}")

        <MyFieldSet legendtext="Entry Form">

            <div mycssclass="@MyCSSClassName.RowInForm">
                <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                    <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Procedure</span>
                    <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBPR.ProcedureName}}" disabled />
                </div>
                <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                    <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Sample Description</span>
                    <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBPR.ProductName}}" disabled />
                </div>
                <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                    <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Sample Date</span>
                    <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBPR.SampleDate}}" disabled />
                </div>
                <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                    <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Sample Qty In {{tbl_Qc_SampleProcessBPR.MeasurementUnit}}</span>
                    <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBPR.SampleQty}}" disabled />
                </div>
            </div>

            <div mycssclass="@MyCSSClassName.RowInForm">
                <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                    <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Action</span>
                    <select id="tbl_Qc_SampleProcessBPR.FK_tbl_Qc_ActionType_ID" name="tbl_Qc_SampleProcessBPR.FK_tbl_Qc_ActionType_ID" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="x.ID as x.ActionName for x in ActionList" data-ng-model="tbl_Qc_SampleProcessBPR.FK_tbl_Qc_ActionType_ID" ng-disabled="ng_readOnly" required>
                        <option value="">Select Action</option>
                    </select>
                    <MyValidationSpan formname="myform" fieldname="tbl_Qc_SampleProcessBPR.FK_tbl_Qc_ActionType_ID" required="true"></MyValidationSpan>
                </div>
            </div>

            <div mycssclass="@MyCSSClassName.RowInForm">
                <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                    <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                </div>
            </div>

            <MyFieldSet legendtext="User" child="true">
                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                        <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBPR.CreatedBy}}" ng-model="tbl_Qc_SampleProcessBPR.CreatedBy" disabled />
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                        <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBPR.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Qc_SampleProcessBPR.CreatedDate" disabled />
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                        <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBPR.ModifiedBy}}" ng-model="tbl_Qc_SampleProcessBPR.ModifiedBy" disabled />
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                        <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_Qc_SampleProcessBPR.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_Qc_SampleProcessBPR.ModifiedDate" disabled />
                    </div>
                </div>
            </MyFieldSet>
        </MyFieldSet>
    </form>
</div>
@*-----------------------------------this is data list view-----------------------------*@
<div mycssclass="@MyCSSClassName.Table_Div">
    <table mycssclass="@MyCSSClassName.Table_Table">
        <tr>
            <th>
                Procedure
            </th>
            <th>
                Sample Description
            </th>
            <th>
                Sample Date
            </th>
            <th>
                Sample Qty
            </th>
            <th>
                Action
            </th>
            <th>
                By
            </th>
            <th>
                At
            </th>
            <th>
                Total Test(s)
            </th>
            <th></th>
        </tr>
        <tr ng-repeat="itm in pageddata.Data">
            <td>
                {{itm.ProcedureName}}
            </td>
            <td>
                {{itm.ProductName}}
            </td>
            <td>
                {{itm.SampleDate}}
            </td>
            <td>
                {{itm.SampleQty}} [{{itm.MeasurementUnit}}]
            </td>
            <td ng-style="{'background-color': itm.FK_tbl_Qc_ActionType_ID == 1 ? 'yellow' : itm.FK_tbl_Qc_ActionType_ID == 2 ? 'lightgreen' : 'lightpink'}">
                {{itm.FK_tbl_Qc_ActionType_IDName}}
            </td>
            <td>
                {{itm.ActionBy}}
            </td>
            <td>
                {{itm.ActionDate}}
            </td>
            <td>
                {{itm.TotalTests}}
            </td>
            <td>
                <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                    <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                    <MyButton operation="@MyButtonOperation.AddDetail" ng-hide="itm.FK_tbl_Qc_ActionType_ID != 1 || itm.IsCompleted" ng-click="GetRow(itm.ID,'Add')"></MyButton>
                    <MyButton operation="@MyButtonOperation.Edit" ng-hide="itm.FK_tbl_Qc_ActionType_ID == 1  || itm.IsCompleted" ng-click="GetRow(itm.ID,'Edit')"></MyButton>
                </div>
                <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                    <button ng-click="itm['MasterObject']=MasterObject; DivHideShow('BatchBPRSampleQcTestCtlr',itm,'BatchBPRSampleCtlr','BatchBPRSampleQcTestCtlr', null);" mycssclass="@MyCSSClassName.Table_OperationBtn" title="Goto Testing">Tests <span class="fa fa-flask-vial"></span></button>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="9">
                <div mycssclass="@MyCSSClassName.Table_NavDiv">
                    <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                    <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                    <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                    <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                    <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                </div>
            </td>
        </tr>

    </table>
</div>
