<MyViewName>
    <MyViewName><a href="" ng-click="DivHideShow(null,null,'AuthorizationSchemeAreaFormCtlr','AuthorizationSchemeCtlr', this);">Authorization Scheme</a></MyViewName>

    <a href="" ng-click="DivHideShow(null,null,'AuthorizationSchemeAreaFormCtlr','AuthorizationSchemeAreaCtlr', this);">Area Allocation</a>
    <MyViewName child="true"> Form Allocation</MyViewName>
</MyViewName>
<div>
    <div>
        <div mycssclass="@MyCSSClassName.Table_DivSubPage">
            <table mycssclass="@MyCSSClassName.Table_TableSubPage">
                <tr>
                    <th>
                        Area
                    </th>
                </tr>
                <tr>
                    <td>
                        <b>{{MasterObject.FK_AspNetOreasArea_IDName}}</b>
                    </td>
                </tr>
                <tr>
                    <td colspan="1">
                    </td>
                </tr>
            </table>
        </div>
    </div>

    @*-----------------------------------this is entry panel-----------------------------*@
<MyButton operation="@MyButtonOperation.Add"></MyButton>
    <div ng-hide="ng_entryPanelHide">
        <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate="">
            @Html.Hidden("AspNetOreasAuthorizationScheme_Area_Form.ID", "{{AspNetOreasAuthorizationScheme_Area_Form.ID}}")
            @Html.Hidden("AspNetOreasAuthorizationScheme_Area_Form.FK_AspNetOreasAuthorizationScheme_Area_ID", "{{AspNetOreasAuthorizationScheme_Area_Form.FK_AspNetOreasAuthorizationScheme_Area_ID}}")
            <MyFieldSet legendtext="Entry Form">
                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Form</span>
                        <MyButtonModal fieldname="AspNetOreasAuthorizationScheme_Area_Form.FK_AspNetOreasArea_Form_IDName" ng-click="OpenFormSearchModal();" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="AspNetOreasAuthorizationScheme_Area_Form.FK_AspNetOreasArea_Form_IDName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Can View</span>
                        <select id="AspNetOreasAuthorizationScheme_Area_Form.CanView" name="AspNetOreasAuthorizationScheme_Area_Form.CanView" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="o.v as o.n for o in [{ n: 'Yes', v: true }, { n: 'No', v: false }]" data-ng-model="AspNetOreasAuthorizationScheme_Area_Form.CanView" ng-disabled="ng_readOnly" required>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="AspNetOreasAuthorizationScheme_Area_Form.CanView" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Can View Only Own Data</span>
                        <select id="AspNetOreasAuthorizationScheme_Area_Form.CanViewOnlyOwnData" name="AspNetOreasAuthorizationScheme_Area_Form.CanViewOnlyOwnData" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="o.v as o.n for o in [{ n: 'Yes', v: true }, { n: 'No', v: false }]" data-ng-model="AspNetOreasAuthorizationScheme_Area_Form.CanViewOnlyOwnData" ng-disabled="ng_readOnly" required>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="AspNetOreasAuthorizationScheme_Area_Form.CanViewOnlyOwnData" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Can View Report</span>
                        <select id="AspNetOreasAuthorizationScheme_Area_Form.CanViewReport" name="AspNetOreasAuthorizationScheme_Area_Form.CanViewReport" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="o.v as o.n for o in [{ n: 'Yes', v: true }, { n: 'No', v: false }]" data-ng-model="AspNetOreasAuthorizationScheme_Area_Form.CanViewReport" ng-disabled="ng_readOnly" required>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="AspNetOreasAuthorizationScheme_Area_Form.CanViewReport" required="true"></MyValidationSpan>
                    </div>
                </div>

                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Can Add</span>
                        <select id="AspNetOreasAuthorizationScheme_Area_Form.CanAdd" name="AspNetOreasAuthorizationScheme_Area_Form.CanAdd" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="o.v as o.n for o in [{ n: 'Yes', v: true }, { n: 'No', v: false }]" data-ng-model="AspNetOreasAuthorizationScheme_Area_Form.CanAdd" ng-disabled="ng_readOnly" required>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="AspNetOreasAuthorizationScheme_Area_Form.CanAdd" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Can Edit</span>
                        <select id="AspNetOreasAuthorizationScheme_Area_Form.CanEdit" name="AspNetOreasAuthorizationScheme_Area_Form.CanEdit" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="o.v as o.n for o in [{ n: 'Yes', v: true }, { n: 'No', v: false }]" data-ng-model="AspNetOreasAuthorizationScheme_Area_Form.CanEdit" ng-disabled="ng_readOnly" required>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="AspNetOreasAuthorizationScheme_Area_Form.CanEdit" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Can Delete</span>
                        <select id="AspNetOreasAuthorizationScheme_Area_Form.CanDelete" name="AspNetOreasAuthorizationScheme_Area_Form.CanDelete" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="o.v as o.n for o in [{ n: 'Yes', v: true }, { n: 'No', v: false }]" data-ng-model="AspNetOreasAuthorizationScheme_Area_Form.CanDelete" ng-disabled="ng_readOnly" required>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="AspNetOreasAuthorizationScheme_Area_Form.CanDelete" required="true"></MyValidationSpan>
                    </div>
                </div>


                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                        <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                    </div>
                </div>
            </MyFieldSet>
        </form>
    </div>
    @*-----------------------------------this is data list view-----------------------------*@
    <div mycssclass="@MyCSSClassName.Table_Div">
        <table mycssclass="@MyCSSClassName.Table_Table">
            <tr>
                <th>
                    Form Name
                </th>
                <th>
                    Can View
                </th>
                <th>
                    Can View Only Own Data
                </th>
                <th>
                    Can View Report
                </th>
                <th>
                    Can Add
                </th>
                <th>
                    Can Edit
                </th>
                <th>
                    Can Delete
                </th>
                <th></th>
            </tr>
            <tr ng-repeat="itm in pageddata.Data">
                <td>
                    {{itm.FK_AspNetOreasArea_Form_IDName}}
                </td>
                <td>
                    {{itm.CanView ? 'Yes' : 'No'}}
                </td>
                <td>
                    {{itm.CanViewOnlyOwnData ? 'Yes' : 'No'}}
                </td>
                <td>
                    {{itm.CanViewReport ? 'Yes' : 'No'}}
                </td>
                <td>
                    {{itm.CanAdd ? 'Yes' : 'No'}}
                </td>
                <td style="background-color:pink;">
                    {{itm.CanEdit ? 'Yes' : 'No'}}
                </td>
                <td style="background-color:indianred;">
                    {{itm.CanDelete ? 'Yes' : 'No'}}
                </td>
                <td>
                    <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                        <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="8">
                    <div mycssclass="@MyCSSClassName.Table_NavDiv">
                        <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                        <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                        <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                        <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                        <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                    </div>
                </td>
            </tr>

        </table>
    </div>
    @*-----------------------------------this is search view-----------------------------*@
    @await Html.PartialAsync("_Filter", "AuthorizationSchemeAreaFormCtlr")

    @*-----------------------------------Form Search Modal-----------------------------*@
    <!-- Modal -->
    <div class="modal fade" id="FormSearchModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Form Search</h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form novalidate>
                        <div mycssclass="@MyCSSClassName.RowInForm">
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup6">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Area</span>
                                <select id="FilterByTextFormSearchModal" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" 
                                        ng-options="o.v as o.n for o in [
                                                                          { n: 'Form Name', v: 'byFormName' }
                                                                        ]"
                                        ng-model="FilterByTextFormSearchModal" ng-disabled="ng_readOnly">
                                   
                                </select>
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup6">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Form Name</span>
                                <input id="FilterValueByTextFormSearchModal" type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="Type to search" ng-model="FilterValueByTextFormSearchModal" />
                            </div>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm">
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">                                
                                <input type="submit" value="Search" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn_Modal" ng-click="SearchForm();" />
                            </div>
                        </div>
                    </form>
                    <div ng-repeat="item in FormResult" style="overflow:auto">
                        
                        <MyButton operation="@MyButtonOperation.ModalItemSelection" ng-click="SelectedForm(item);" data-bs-dismiss="modal">{{item.FormName}}</MyButton>
                    </div>

                </div>
                <div class="modal-footer">
                    
                </div>
            </div>
        </div>
    </div>

</div>
