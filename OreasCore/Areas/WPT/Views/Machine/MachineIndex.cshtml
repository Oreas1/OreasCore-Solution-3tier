@{
    ViewBag.Title = "Machine";
}
@section Scripts {
    <script src="~/angular.js/Angular-WPT/Machine/machineindex.0.1.js"></script>
}
<div ng-controller="MachineIndexCtlr" class="container">

    <div id="MachineIndexCtlr">
        <MyViewName>Machine</MyViewName>
        @*-----------------------------------this is entry panel-----------------------------*@
        <MyButton operation="@MyButtonOperation.Add"></MyButton>
        <div ng-hide="ng_entryPanelHide">
            <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate>
                <MyAntiforgeryToken></MyAntiforgeryToken>
                @Html.Hidden("ID", "{{tbl_WPT_Machine.ID}}")
                <MyFieldSet legendtext="Entry Form">

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Machine Name</span>
                            <input id="tbl_WPT_Machine.Name" name="tbl_WPT_Machine.Name" type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" ng-model="tbl_WPT_Machine.Name" ng-disabled="ng_readOnly" minlength="1" maxlength="50" required />
                            <MyValidationSpan formname="myform" fieldname="tbl_WPT_Machine.Name" required="true" minlength="1" maxlength="50"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req" class="w-50">Machine No</span>
                            <input id="tbl_WPT_Machine.No" name="tbl_WPT_Machine.No" type="number" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" class="w-50" ng-model="tbl_WPT_Machine.No" ng-disabled="ng_readOnly" min="1" required />
                            <MyValidationSpan formname="myform" fieldname="tbl_WPT_Machine.No" required="true" minlength="1"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Machine IP</span>
                            <input id="tbl_WPT_Machine.IP" name="tbl_WPT_Machine.IP" type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" ng-model="tbl_WPT_Machine.IP" ng-disabled="ng_readOnly" minlength="7" maxlength="15" required />
                            <MyValidationSpan formname="myform" fieldname="tbl_WPT_Machine.IP" required="true" minlength="7" maxlength="15"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req" class="w-50">Machine Port#</span>
                            <input id="tbl_WPT_Machine.PortNo" name="tbl_WPT_Machine.PortNo" type="number" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" class="w-50" ng-model="tbl_WPT_Machine.PortNo" ng-disabled="ng_readOnly" min="1" max="65535" required />
                            <MyValidationSpan formname="myform" fieldname="tbl_WPT_Machine.PortNo" required="true" minlength="1" maxlength="65535"></MyValidationSpan>
                        </div>
                    </div>

                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Auto ClearLog After Download</span>
                            <select id="tbl_WPT_Machine.AutoClearLogAfterDownload" name="tbl_WPT_Machine.AutoClearLogAfterDownload" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="o.v as o.n for o in [{ n: 'Yes', v: true }, { n: 'No', v: false }]" data-ng-model="tbl_WPT_Machine.AutoClearLogAfterDownload" ng-disabled="ng_readOnly" required>
                            </select>
                            <MyValidationSpan formname="myform" fieldname="tbl_WPT_Machine.AutoClearLogAfterDownload" required="true"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Scheduled Download Daily AT</span>
                            <input id="ScheduledDownloadDailyAT" name="ScheduledDownloadDailyAT" type="time" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{ScheduledDownloadDailyAT}}" ng-model="ScheduledDownloadDailyAT" step="1" ng-disabled="ng_readOnly" />
                            <MyValidationSpan formname="myform" fieldname="ScheduledDownloadDailyAT"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Scheduled Download Daily AT2</span>
                            <input id="ScheduledDownloadDailyAT2" name="ScheduledDownloadDailyAT2" type="time" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{ScheduledDownloadDailyAT2}}" ng-model="ScheduledDownloadDailyAT2" step="1" ng-disabled="ng_readOnly" />
                            <MyValidationSpan formname="myform" fieldname="ScheduledDownloadDailyAT2"></MyValidationSpan>
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">

                        </div>
                    </div>



                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                            <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                        </div>
                    </div>

                    <MyFieldSet legendtext="User" child="true">
                        <div mycssclass="@MyCSSClassName.RowInForm">
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_WPT_Machine.CreatedBy}}" ng-model="tbl_WPT_Machine.CreatedBy" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_WPT_Machine.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_WPT_Machine.CreatedDate" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_WPT_Machine.ModifiedBy}}" ng-model="tbl_WPT_Machine.ModifiedBy" disabled />
                            </div>
                            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                                <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                                <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_WPT_Machine.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_WPT_Machine.ModifiedDate" disabled />
                            </div>
                        </div>
                    </MyFieldSet>
                </MyFieldSet>
            </form>
        </div>
        @*-----------------------------------this is data list view-----------------------------*@
        <div mycssclass="@MyCSSClassName.Table_Div">
            <table mycssclass="@MyCSSClassName.Table_Table">
                <tr>
                    <th width="20">
                        Name
                    </th>
                    <th width="10">
                        No
                    </th>
                    <th width="10">
                        IP
                    </th>
                    <th width="10">
                        Port#
                    </th>
                    <th width="10">
                        Auto Clear
                    </th>
                    <th width="10" style="background-color:lightgray; font-size:xx-small;">
                        LAst Downloaded
                    </th>
                    <th width="10" style="background-color:lightgray; font-size:xx-small;">
                        LAst Cleared
                    </th>
                    <th width="10" style="background-color:lightgray; font-size:xx-small;">
                        LAst Count
                    </th>
                    <th width="10">
                        Scheduled Download Daily First/Second
                    </th>
                    <th></th>
                </tr>
                <tr ng-repeat="itm in pageddata.Data">
                    <td>
                        {{itm.Name}}
                    </td>
                    <td>
                        {{itm.No}}
                    </td>
                    <td>
                        {{itm.IP}}
                    </td>
                    <td>
                        {{itm.PortNo}}
                    </td>
                    <td>
                        {{itm.AutoClearLogAfterDownload?'Yes':'No'}}
                    </td>
                    <td style="font-size:xx-small;">
                        {{itm.LastATLogDownloanded}}
                    </td>
                    <td style="font-size:xx-small;">
                        {{itm.LastATLogClear}}
                    </td>
                    <td style="font-size:xx-small;">
                        {{itm.LastATLogCount}}
                    </td>
                    <td>
                        {{itm.ScheduledDownloadDailyAT}} / {{itm.ScheduledDownloadDailyAT2}}
                    </td>
                    <td>
                        <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                            <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                            <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                            <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                        </div>
                        <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                            <a href="/WPT/Machine/MachineOperations/{{itm.ID}}" target="_blank"><span class="fa fa-cog" style="color:steelblue;"></span> Operations</a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="10">
                        <div mycssclass="@MyCSSClassName.Table_NavDiv">
                            <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                            <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                            <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                            <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                            <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                        </div>
                    </td>
                </tr>
            </table>
        </div>

        @*-----------------------------------this is search view-----------------------------*@
        @await Html.PartialAsync("_Filter", "MachineIndexCtlr")
    </div>

    <hr />
    <h2>Schedular Last Datetime: @ViewBag.CurrentDateTime</h2>
</div>




