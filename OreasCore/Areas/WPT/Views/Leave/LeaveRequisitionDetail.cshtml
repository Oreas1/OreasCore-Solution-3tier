<MyViewName>
    <a href="" ng-click="DivHideShow(null,null,'LeaveRequisitionDetailCtlr','LeaveRequisitionMasterCtlr', this);">Leave Requisition Months</a>
    <MyViewName child="true"> Leave Requisition</MyViewName>
</MyViewName>
<div>
    <div>
        <div mycssclass="@MyCSSClassName.Table_DivSubPage">
            <table mycssclass="@MyCSSClassName.Table_TableSubPage">
                <tr>
                    <th>
                        Month Start
                    </th>
                    <th>
                        Month End
                    </th>
                </tr>
                <tr>
                    <td>
                        <b>{{MasterObject.CalendarMonthStartDate}}</b>
                    </td>
                    <td>
                        <b>{{MasterObject.CalendarMonthEndDate}}</b>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                    </td>
                </tr>
            </table>
        </div>
    </div>

    @*-----------------------------------this is entry panel-----------------------------*@
    <MyButton operation="@MyButtonOperation.Add"></MyButton>
    <div ng-hide="ng_entryPanelHide">
        <form name="myform" role="form" ng-submit="PostRow(); myform.$setPristine();" novalidate="">
            <MyAntiforgeryToken></MyAntiforgeryToken>
            @Html.Hidden("tbl_WPT_LeaveRequisition.ID", "{{tbl_WPT_LeaveRequisition.ID}}")
            @Html.Hidden("tbl_WPT_LeaveRequisition.FK_tbl_WPT_CalendarYear_Months_ID", "{{tbl_WPT_LeaveRequisition.FK_tbl_WPT_CalendarYear_Months_ID}}")
            <MyFieldSet legendtext="Entry Form">
                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Doc No</span>
                        <input id="tbl_WPT_LeaveRequisition.DocNo" name="tbl_WPT_LeaveRequisition.DocNo" type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="00001" value="tbl_WPT_LeaveRequisition.DocNo" ng-model="tbl_WPT_LeaveRequisition.DocNo" ng-disabled="ng_readOnly" readonly />
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Doc Date</span>
                        <input id="tbl_WPT_LeaveRequisition.DocDate" name="tbl_WPT_LeaveRequisition.DocDate" type="date" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{tbl_WPT_LeaveRequisition.DocDate}}" ng-model="tbl_WPT_LeaveRequisition.DocDate" ng-disabled="ng_readOnly" required />
                        <MyValidationSpan formname="myform" fieldname="tbl_WPT_LeaveRequisition.DocDate" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Reason</span>
                        <input id="tbl_WPT_LeaveRequisition.Reason" name="tbl_WPT_LeaveRequisition.Reason" type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="...." value="tbl_WPT_LeaveRequisition.Reason" ng-model="tbl_WPT_LeaveRequisition.Reason" ng-disabled="ng_readOnly" maxlength="50" />
                        <MyValidationSpan formname="myform" fieldname="tbl_WPT_LeaveRequisition.Reason" maxlength="50"></MyValidationSpan>
                    </div>
                </div>
                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Employee</span>
                        <MyButtonModal fieldname="tbl_WPT_LeaveRequisition.FK_tbl_WPT_Employee_IDName" ng-click="OpenEmployeeSearchModalGeneral('General', 0, 'tbl_WPT_LeaveRequisition.FK_tbl_WPT_Employee_IDName', EmployeeSearch_CtrlFunction_Ref_InvokeOnSelection);myform['tbl_WPT_LeaveRequisition.FK_tbl_WPT_Employee_IDName'].$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_WPT_LeaveRequisition.FK_tbl_WPT_Employee_IDName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Leave Policy</span>
                        <MyButtonModal fieldname="tbl_WPT_LeaveRequisition.LeavePolicyName" ng-click="OpenLeavePolicySearchModalGeneral('General',tbl_WPT_LeaveRequisition.FK_tbl_WPT_Employee_ID, MasterObject.ID, tbl_WPT_LeaveRequisition.FK_tbl_WPT_Employee_IDName, 'tbl_WPT_LeaveRequisition.LeavePolicyName',LeavePolicySearch_CtrlFunction_Ref_InvokeOnSelection); myform.tbl_WPT_LeaveRequisition.LeavePolicyName.$dirty=true;" ng-disabled="ng_readOnly" required></MyButtonModal>
                        <MyValidationSpan formname="myform" fieldname="tbl_WPT_LeaveRequisition.LeavePolicyName" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Approved HR</span>
                        <select id="tbl_WPT_LeaveRequisition.FK_tbl_WPT_ActionList_ID_HR" name="tbl_WPT_LeaveRequisition.FK_tbl_WPT_ActionList_ID_HR" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Select" ng-options="x.ID as x.ActionName for x in ActionList" data-ng-model="tbl_WPT_LeaveRequisition.FK_tbl_WPT_ActionList_ID_HR" ng-disabled="ng_readOnly" required>
                            <option value="">Select Action</option>
                        </select>
                        <MyValidationSpan formname="myform" fieldname="tbl_WPT_LeaveRequisition.FK_tbl_WPT_ActionList_ID_HR" required="true"></MyValidationSpan>
                    </div>
                </div>
                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Leave Value</span>
                        <input id="tbl_WPT_LeaveRequisition.LeaveValue" name="tbl_WPT_LeaveRequisition.LeaveValue" type="number" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" ng-model="tbl_WPT_LeaveRequisition.LeaveValue" ng-disabled="ng_readOnly" min="0.1" max="1" required />
                        <MyValidationSpan formname="myform" fieldname="tbl_WPT_LeaveRequisition.LeaveValue" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Leave From</span>
                        <input id="tbl_WPT_LeaveRequisition.LeaveFrom" name="tbl_WPT_LeaveRequisition.LeaveFrom" type="date" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{tbl_WPT_LeaveRequisition.LeaveFrom}}" min="{{MinRange|date:'yyyy-MM-dd'}}" max="{{MaxRange|date:'yyyy-MM-dd'}}" ng-model="tbl_WPT_LeaveRequisition.LeaveFrom" ng-disabled="ng_readOnly" required />
                        <MyValidationSpan formname="myform" fieldname="tbl_WPT_LeaveRequisition.LeaveFrom" required="true"></MyValidationSpan>
                    </div>
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroup4">
                        <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label_Req">Leave Till</span>
                        <input id="tbl_WPT_LeaveRequisition.LeaveTill" name="tbl_WPT_LeaveRequisition.LeaveTill" type="date" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" placeholder="{{tbl_WPT_LeaveRequisition.LeaveTill}}" min="{{MinRange|date:'yyyy-MM-dd'}}" max="{{MaxRange|date:'yyyy-MM-dd'}}" ng-model="tbl_WPT_LeaveRequisition.LeaveTill" ng-disabled="ng_readOnly" required />
                        <MyValidationSpan formname="myform" fieldname="tbl_WPT_LeaveRequisition.LeaveTill" required="true"></MyValidationSpan>
                    </div>
                </div>


                <div mycssclass="@MyCSSClassName.RowInForm">
                    <div mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit">
                        <input type="submit" value="{{ng_entryPanelSubmitBtnText}}" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-disabled="myform.$invalid || ng_DisabledBtnAll" />
                    </div>
                </div>

                <MyFieldSet legendtext="User" child="true">
                    <div mycssclass="@MyCSSClassName.RowInForm">
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_WPT_LeaveRequisition.CreatedBy}}" ng-model="tbl_WPT_LeaveRequisition.CreatedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Created Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_WPT_LeaveRequisition.CreatedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_WPT_LeaveRequisition.CreatedDate" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified by</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_WPT_LeaveRequisition.ModifiedBy}}" ng-model="tbl_WPT_LeaveRequisition.ModifiedBy" disabled />
                        </div>
                        <div mycssclass="@MyCSSClassName.RowInForm_FormGroup3">
                            <span mycssclass="@MyCSSClassName.RowInForm_FormGroup_Label">Modified Date</span>
                            <input type="text" mycssclass="@MyCSSClassName.RowInForm_FormGroup_Input" value="{{tbl_WPT_LeaveRequisition.ModifiedDate | date :  'dd-MMM-yyyy HH:mm:ss a'}}" ng-model="tbl_WPT_LeaveRequisition.ModifiedDate" disabled />
                        </div>
                    </div>
                </MyFieldSet>
            </MyFieldSet>
        </form>
    </div>
    @*-----------------------------------this is data list view-----------------------------*@
    <div mycssclass="@MyCSSClassName.Table_Div">
        <table mycssclass="@MyCSSClassName.Table_Table">
            <tr>
                <th>
                    Employee Name
                </th>
                <th>
                    Leave Value
                </th>
                <th>
                    Policy Name
                </th>
                <th>
                    LeaveFrom
                </th>
                <th>
                    LeaveTill
                </th>
                <th>
                    Reason
                </th>
                <th>
                    HOS Approval
                </th>
                <th>
                    HR Approval
                </th>
                <th>
                    Final Approval
                </th>
                <th></th>
            </tr>
            <tr ng-repeat="itm in pageddata.Data">
                <td>
                    <b><u>{{itm.FK_tbl_WPT_Employee_IDName}}</u></b>
                </td>
                <td>
                    {{itm.LeaveValue}}
                </td>
                <td>
                    {{itm.LeavePolicyName}}
                </td>
                <td>
                    {{itm.LeaveFrom}}
                </td>
                <td>
                    {{itm.LeaveTill}}
                </td>
                <td>
                    {{itm.Reason}}
                </td>
                <td>
                    {{itm.FK_tbl_WPT_ActionList_ID_HOSName}}
                </td>
                <td>
                    {{itm.FK_tbl_WPT_ActionList_ID_HRName}}
                </td>
                <td>
                    {{itm.FK_tbl_WPT_ActionList_ID_FinalName}}
                </td>
                <td>
                    <div mycssclass="@MyCSSClassName.Table_OptColDiv">
                        <MyButton operation="@MyButtonOperation.View" ng-click="GetRow(itm.ID,'View')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Edit" ng-click="GetRow(itm.ID,'Edit')"></MyButton>|
                        <MyButton operation="@MyButtonOperation.Delete" ng-click="GetRow(itm.ID,'Delete')"></MyButton>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="10">
                    <div mycssclass="@MyCSSClassName.Table_NavDiv">
                        <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                        <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                        <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                        <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                        <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                    </div>
                </td>
            </tr>

        </table>
    </div>
    @*-----------------------------------this is search view-----------------------------*@
    @await Html.PartialAsync("_Filter", "LeaveRequisitionDetailCtlr")

    @*-----------------------------------this is Modal view policy-----------------------------*@
    <!-- Modal -->
    @await Html.PartialAsync("_LeavePolicySearchModalGeneral")

</div>
