<MyViewName>
    <a href="" ng-click="DivHideShow(null,null,'ProductionOrderBatchCtlr','ProductionOrderCtlr', this);">Production Order</a>
    <MyViewName child="true"> Batch</MyViewName>
</MyViewName>
<div>
    <div>
        <div mycssclass="@MyCSSClassName.Table_DivSubPage">
            <table mycssclass="@MyCSSClassName.Table_TableSubPage">
                <tr>
                    <th>
                        Customer
                    </th>
                    <th>
                        Order No
                    </th>
                    <th>
                        Order Date
                    </th>
                    <th>
                        Priority
                    </th>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Req Qty
                    </th>
                    <th>
                        Mfg Qty
                    </th>
                    <th>
                        Sold
                    </th>
                    <th>
                        Requested
                    </th>
                    <th></th>
                </tr>
                <tr>
                    <td>
                        {{MasterObject.AccountName}}
                    </td>
                    <td>
                        {{MasterObject.OrderNo}}
                    </td>
                    <td>
                        {{MasterObject.OrderDate}}
                    </td>
                    <td>
                        {{MasterObject.Priority}}
                    </td>
                    <td>
                        {{MasterObject.ProductName}}
                    </td>
                    <td>
                        {{MasterObject.MfgQtyLimit}} {{MasterObject.MeasurementUnit}}
                    </td>
                    <td>
                        {{MasterObject.ManufacturingQty}}
                    </td>
                    <td>
                        {{MasterObject.SoldQty}}
                    </td>
                    <td>
                        Batch Size : {{MasterObject.RequestedBatchSize}}
                        <br />
                        Batch #    : <b>{{MasterObject.RequestedBatchNo}}</b>
                        <br />
                        Mfg Date   : {{MasterObject.RequestedMfgDate}}
                    </td>
                    <td>
                        <button type="button" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-click="GenerateBMR('New');" ng-hide="BtnHide">New</button>
                        <button type="button" mycssclass="@MyCSSClassName.RowInForm_FormGroupSubmit_btn" ng-click="GenerateBMR('Merge');" ng-hide="BtnHide">Merge</button>
                    </td>
                </tr>
                <tr>
                    <td colspan="10">
                    </td>
                </tr>
            </table>
        </div>
    </div>

    @*-----------------------------------this is data list view-----------------------------*@
    <div mycssclass="@MyCSSClassName.Table_Div">
        <table mycssclass="@MyCSSClassName.Table_Table">
            <tr>
                <th>
                    Doc No
                </th>
                <th>
                    Doc Date
                </th>
                <th>
                    BatchNo
                </th>
                <th>
                    BatchSize
                </th>
                <th>
                    Product Name
                </th>
                <th></th>
            </tr>
            <tr ng-repeat="itm in pageddata.Data">
                <td>
                    {{itm.DocNo}}
                </td>
                <td>
                    {{itm.DocDate}}
                </td>
                <td>
                    {{itm.BatchNo}}
                </td>
                <td>
                    {{itm.BatchSize}} {{itm.MeasurementUnit}}
                </td>
                <td>
                    {{itm.ProductName}}
                </td>  
                <td></td>
            </tr>
            <tr>
                <td colspan="6">
                    <div mycssclass="@MyCSSClassName.Table_NavDiv">
                        <MyButton operation="@MyButtonOperation.first" ng-click="pageNavigation('first')" ng-disabled="ng_DisabledBtnPageF"></MyButton>
                        <MyButton operation="@MyButtonOperation.back" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP"></MyButton>
                        <MyButton operation="@MyButtonOperation.RecordNo" ng-click="pageNavigation('back')" ng-disabled="ng_DisabledBtnPageP">{{pageddata.CurrentPage}} of {{pageddata.TotalPages}}</MyButton>
                        <MyButton operation="@MyButtonOperation.next" ng-click="pageNavigation('next')" ng-disabled="ng_DisabledBtnPageN"></MyButton>
                        <MyButton operation="@MyButtonOperation.last" ng-click="pageNavigation('last')" ng-disabled="ng_DisabledBtnPageL"></MyButton>
                    </div>
                </td>
            </tr>
        </table>
    </div>

    <MyFieldSet legendtext="">
        <div mycssclass="@MyCSSClassName.RowInForm">
            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup6">
                <div class="card text-center">
                    <div class="card-header" style="background-color:lightgreen;">
                        <h5>Raw Material <i class="fa fa-leaf" style="color:green;"></i></h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">Available Batch Size: {{MaxRawBatchSizeObj.MaxUnits}}-{{MasterObject.MeasurementUnit}}</h6>
                        <p class="card-text">Due to</p>
                        <p class="card-text"><b>* {{MaxRawBatchSizeObj.ProductName}}</b></p>
                    </div>
                    <div class="card-footer text-muted" style="background-color:lightgreen;">

                    </div>
                </div>
            </div>
            <div mycssclass="@MyCSSClassName.RowInForm_FormGroup6">
                <div class="card text-center">
                    <div class="card-header" style="background-color:lightsteelblue;">
                        <h5>Packaging Material <i class="fa fa-boxes-packing" style="color:steelblue;"></i></h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">Available Batch Size: {{MaxPackagingBatchSizeObj.MaxUnits}}-{{MasterObject.MeasurementUnit}}</h6>
                        <p class="card-text">Due to</p>
                        <p class="card-text"><b>* {{MaxPackagingBatchSizeObj.ProductName}}</b></p>
                    </div>
                    <div class="card-footer text-muted" style="background-color:lightsteelblue;">

                    </div>
                </div>
            </div>
        </div>

        <div mycssclass="@MyCSSClassName.Table_Div">
            <table mycssclass="@MyCSSClassName.Table_Table">
                <tr>
                    <th>
                        Type
                    </th>
                    <th>
                        WareHouse
                    </th>
                    <th>
                        Product
                    </th>
                    <th>
                        Category
                    </th>
                    <td>
                        Max Units
                    </td>
                    <th>
                        Standard Size
                    </th>
                    <th>
                        Formula Qty
                    </th>
                    <th>
                        Available Qty
                    </th>
                </tr>
                <tr ng-repeat="itm in BMRAvailabilityData">
                    <td>
                        {{itm.FilterName}}
                    </td>
                    <td>
                        {{itm.WareHouseName}}
                    </td>
                    <td>
                        {{itm.ProductName}}
                    </td>
                    <td>
                        {{itm.CategoryName}}
                    </td>
                    <td>
                        {{itm.MaxUnits}} {{itm.UnitPrimary}}
                    </td>
                    <td>
                        {{itm.FormulaBatchSize}} {{MasterObject.CouplingUnit}}
                    </td>
                    <td>
                        {{itm.FormulaQty}} {{itm.UnitItem}}
                    </td>
                    <td>
                        {{itm.AvailableQty}} {{itm.UnitItem}}
                    </td>
                </tr>
                <tr>
                    <td colspan="8">
                        <div mycssclass="@MyCSSClassName.Table_NavDiv">
                            <button class="btn btn-primary" ng-click="LoadAvailability();">Get Availability</button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </MyFieldSet>

</div>
